<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" src="/css/output.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>IT Tools</title>
</head>

<body>
    {{#error}}
    <p id="error-message"
        class="fixed right-10 top-10 text-white p-4 bg-red-500 rounded-full opacity-100 duration-2000">
        {{error}}
    </p>
    {{/error}}

    {{#message}}
    <p id="message"
        class="fixed right-10 top-10 text-white p-4 bg-green-500 rounded-full opacity-100 duration-2000 z-50">
        {{message}}
    </p>
    {{/message}}

    <div class="flex items-center justify-center h-screen bg-gray-800 px-4">
        <div class="w-full max-w-md bg-white rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-semibold text-blue-500 mb-4 text-center">Login</h2>
            <form action="/user/login" method="post">
                <div class="flex flex-col mb-3 space-y-2">
                    <label for="login-username" class="block text-gray-700">Username</label>
                    <input type="username" id="login-username"
                        class="w-full px-3 py-2 border rounded-full focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                        name="username" required />
                </div>
                <div class="flex flex-col mb-3 space-y-2">
                    <label for="login-password" class="block text-gray-700">Password</label>
                    <input type="password" id="login-password"
                        class="w-full px-3 py-2 border rounded-full focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                        name="password" required />
                </div>

                <button type="submit"
                    class="bg-blue-500 text-black border border-blue-500 hover:bg-white py-2 px-3 rounded-full w-full transition-all cursor-pointer mt-5">
                    Login
                </button>
            </form>

            <div class="flex my-4 space-x-2 justify-center">
                <p>Don't have an account?</p>
                <a href="/user/register" class="text-blue-500 hover:underline">Register</a>
            </div>

            <div class="flex justify-center">
                <a href="/" class="hover:underline text-gray-500">Back to home page</a>
            </div>
        </div>
    </div>

    <script>
        const errorMessage = document.getElementById("error-message");
        const message = document.getElementById("message");

        if (errorMessage) {
            setTimeout(() => {
                errorMessage.style.opacity = 0;
                setTimeout(() => {
                    errorMessage.remove();
                }, 2000);
            }, 2000);
        }

        if (message) {
            setTimeout(() => {
                message.style.opacity = 0;
                setTimeout(() => {
                    message.remove();
                }, 2000);
            }, 2000);
        }
    </script>
</body>

</html>