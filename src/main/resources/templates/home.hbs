        }

        fetch(`/api/user/favorite-tool?userId=${Number(userId)}&toolId=${Number(toolId)}`, {
            method: method,
            headers: {
                'Content-Type': 'application/json'
            }
        })
            .then(response => response.json())
            .then(data => { })
            .catch(error => console.error(error));
    }
</script>

