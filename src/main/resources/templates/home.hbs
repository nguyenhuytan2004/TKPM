<script>
    document.addEventListener('DOMContentLoaded', function () {
        const isLoggedIn = !!document.getElementById('userInformation')?.dataset.username;
        const toolLinks = document.querySelectorAll('[id="toolLink"]');
        const popup = document.getElementById('premiumLoginPopup');
        const closeButtons = [
            document.getElementById('closePremiumPopup'),
            document.getElementById('closePremiumPopupBtn')
        ];

        toolLinks.forEach(link => {
            link.addEventListener('click', function (e) {
                const isPremium = link.getAttribute('data-premium') === 'true';

                if (isPremium && !isLoggedIn) {
                    e.preventDefault();
                    popup.classList.remove('hidden');
                }
            });
        });

        closeButtons.forEach(btn => {
            btn?.addEventListener('click', () => {
                popup.classList.add('hidden');
            });
        });
    });
</script>



